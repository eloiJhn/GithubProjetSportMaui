<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetSport.Views.LoginView"
             xmlns:vm="clr-namespace:ProjetSport.ViewModels"
             Title="LoginView">
    <ContentPage.BindingContext>
        <vm:UserViewModel></vm:UserViewModel>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label Text="Identifiant : "></Label>
        <Entry Placeholder="Identifiant" Text="{Binding Identifiant}"/>

        <Label Text="Password : "></Label>
        <Entry Placeholder="Password" Text="{Binding Password}"/>

        <Button Text="Login" Command="{Binding connectionCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>